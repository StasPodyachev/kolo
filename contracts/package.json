{
  "displayName": "kolo",
  "scripts": {
    "build-contracts": "sol-merger --export-plugin SPDXLicenseRemovePlugin \"./contracts/*.sol\" ./build",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "compile-v3-core": "npx typechain --target ethers-v5 --out-dir types/v3 './node_modules/@uniswap/v3-core/artifacts/contracts/**/*.json'",
    "compile-v3-types": "npx typechain --target ethers-v5 --out-dir types/v3 './node_modules/@uniswap/v3-periphery/artifacts/contracts/**/*.json'",
    "test": "hardhat test",
    "coverage": "cross-env CODE_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\""
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
