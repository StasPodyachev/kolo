    "@typechain/ethers-v5": "^7.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.15",
    "chai": "^4.3.7",
    "cids": "^1.1.9",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.8",
    "hardhat": "^2.11.2",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-deploy": "^0.9.29",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
